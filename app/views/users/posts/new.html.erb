<h1>投稿</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @post, url: users_posts_path do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'form-control'} %>
  
  <h4>場所</h4>
  <%= f.text_field :place %>
	
  <h4>内容</h4>
  <%= f.text_area :content %>
  
  <h4>写真または画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
	
  <%= f.submit '投稿' %>
<% end %>