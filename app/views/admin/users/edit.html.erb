<h2>会員登録情報編集</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @user, url: users_user_path do |f| %>

<div class="form-group">
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
</div>
<div class="form-group">
  <label for="inputName">フリガナ</label>
  <%= f.text_field :name_kana, autofocus: true, id:"inputName_kana", placeholder:"フリガナ" %>
</div>
<div class="form-group">
  <label for="inputName">ニックネーム</label>
  <%= f.text_field :nickname, autofocus: true, id:"inputNickname", placeholder:"ニックネーム" %>
</div>
<div class="form-group">
  <label for="inputName">お住まいの都道府県</label>
  <%= f.text_field :prefectures, autofocus: true, id:"inputPrefectures", placeholder:"お住まいの都道府県" %>
</div>
<div class="form-group">
  <label for="inputName">年齢</label>
  <%= f.text_field :age, autofocus: true, id:"inputAge", placeholder:"年齢" %>
</div>
<div class="form-group">
  <label for="inputName">電話番号_ハイフンなし</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号" %>
</div>
<div class="form-group">
  <label for="inputName">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %>
</div>
<div class="form-group">
  <label for="inputName">パスワード</label>
  <%= f.text_field :password, autofocus: true, id:"inputPassword", placeholder:"パスワード" %>
</div>
<div class="form-group">
  <label for="inputName">パスワード_確認用</label>
  <%= f.text_field :password_confirmation, autofocus: true, id:"inputPassword_confirmation", placeholder:"パスワード確認用" %>
</div>
<div class="form-group">
  <%= f.submit "編集内容を更新", class: "btn btn-secondary" %>
</div>
<% end %>