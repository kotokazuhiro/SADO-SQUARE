<div class="container mt-5">
<h2>会員コメント一覧</h2>

<table class="table mt-3">

<% @comments.each do |comment| %>
  <tr>
    <td class="col-2"><%= @users.find(comment.user_id).name %></td>
    <td class="col-8"><%= comment.comment %></td>
    <td class="col-1"><%= comment.created_at.strftime('%Y/%m/%d') %></td>
    <td class="col-1">
    <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

</div>